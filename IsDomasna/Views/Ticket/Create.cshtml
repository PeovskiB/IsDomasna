@model IsDomasna.Models.Ticket  // Update with the appropriate namespace for your Ticket model

<h2>Create New Ticket</h2>

@using (Html.BeginForm("Create", "Ticket", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ValidityDate)
        @Html.TextBoxFor(model => model.ValidityDate, "{0:yyyy-MM-dd}", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ValidityDate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Genre)
        @Html.TextBoxFor(model => model.Genre, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Genre, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
